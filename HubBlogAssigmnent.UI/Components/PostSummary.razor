<MudCard @onclick="OnClick" Class="mud-button zoom">
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudAvatar Color="Color.Secondary">I</MudAvatar>
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.body1">@Post.Title</MudText>
            <MudText Typo="Typo.body2">@($"{Post.CreatedDateTimeUtc:f}")</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardMedia  Image="images/banner-industry-tech.jpg" Height="250" />
    <MudCardContent>
        <MudText Typo="Typo.body2">@Post.Summary</MudText>
    </MudCardContent>
    <MudCardActions>
        <MudIconButton Icon="@Icons.Material.Filled.Favorite" Color="Color.Default" />
        <MudIconButton Icon="@Icons.Material.Filled.Share" Color="Color.Default" />
    </MudCardActions>
</MudCard>